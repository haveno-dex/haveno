        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
    </padding>
    <FilterBox fx:id="filterBox" />
    <TableView fx:id="tableView" VBox.vgrow="ALWAYS" />
    <HBox spacing="10">
        <Label fx:id="numItems"/>
        <Region fx:id="footerSpacer"/>
    </HBox>
</VBox>
